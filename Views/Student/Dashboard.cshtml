@model FYPWeb.Model.StdResult
@{
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NUML</title>
    <link rel="shortcut icon" type="image/png" href="~/Images/logo.png" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css.map" />
    <link rel="stylesheet" href="~/fonts/Font/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/CSS/Table.css" />
    <style>
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>
</head>
<body>
    <center>
        <section>
            <div class="container-fluid" style="padding: 0;">
                <div class="row" style="height: 100vh; overflow-y: auto;">
                    <div class="col-lg-2" style="background-color: #8EA1E6; height:100%">
                        <div style="background: #2B2941; width: 65%;  border-radius: 20px; margin: 40px;padding:10% ">
                            <img src="~/Images/Graduation Cap.png" style="width:70%;height:auto;margin-right:-6%" />
                        </div>
                        <div class="row">
                            <a href="@Url.Action("Dashboard","Student")" style="color:black">
                                <div class="col-lg-12">
                                    <div class="col-lg-3" style="margin-left:3%">
                                        <img src="~/Images/Vector.png" />
                                    </div>
                                    <div class="col-lg-8">
                                        <p style="font-family:Minion Variable Concept; font-weight:bold;font-size:medium">Student Dashboard</p>
                                    </div>
                                </div>
                            </a>
                            <div class="col-lg-12" style="margin-top:150%">
                                <a href="@Url.Action("Logout","Student")" style="color:black">
                                    <div class="col-lg-2" style="margin-left:3%">
                                        <i class="fa fa-sign-out"></i>
                                    </div>
                                    <div class="col-lg-9">
                                        <p style="font-family:Minion Variable Concept; font-weight:bold;font-size:medium">Log out</p>
                                    </div>
                                </a>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-10" style="background-color: #FFFFFF; height:100%">
                        <div class="row">
                            <div class="col-lg-12" style="background: #e6e6e6; width: 90%; margin: 5%; border-radius: 25px">
                                <div class="col-lg-3">
                                    <img src="~/Images/Rectangle 1.jpg" style="width: 55%; height: auto; border-radius: 20%;margin-top:5%" />
                                </div>
                                <div class="col-lg-9" style="text-align:left;font-family: Minion Variable Concept">
                                    <h1>@Model.student.Name</h1>
                                    <h3>Roll:Numl-@Model.student.RollNumber</h3>
                                    <h3>Degree: @Model.student.Degree (@Model.student.Department)</h3>
                                </div>
                            </div>
                            <div class="col-lg-12" style="background: #e6e6e6; width: 90%; margin: 0 5%; border-radius: 25px;margin-bottom: 50px;">
                                <div class="col-lg-8" style="text-align: left; margin: 3% 0 3% 0; font-family: Minion Variable Concept">
                                    <h2 style="display: inline;">Department:</h2><h3 style="display: inline;">@Model.student.Department</h3>
                                    <br />
                                    <br />
                                    <h2 style="display: inline;">Faclty:</h2><h3 style="display: inline;">@Model.student.Faculty</h3>
                                    

                                </div>

                                <div class="col-lg-3">
                                    <div class="dropdown" style="font-family: Minion Variable Concept" ">
                                        <button class="dropbtn" style="border-radius:5px; font-size:30px;margin-top:35%">Select <span><i class="fa-solid fa-caret-down"></i></span></button>
                                        <div class="dropdown-content">
                                            <a href="#">Result</a>
                                            <a href="@Url.Action("Transcript","Student")">Transcript</a>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <table id="keywords" cellspacing="0" cellpadding="0" style="border:1px solid lightgray;">
                                <thead>
                                    <tr>
                                        <th><span>Sr No</span></th>
                                        <th><span>Semester</span></th>
                                        <th><span></span></th>
                                        <th><span></span></th>
                                        <th><span></span></th>
                                        <th><span></span></th>
                                        <th><span></span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var req in Model.results)
                                    {
                                    <tr>
                                        <td class="lalign">1.</td>
                                        <td>Semester -@req.SemesterId</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td><a href="@Url.Action("Result", "Student", new { ID = req.SemesterId }) "><i class="fa fa-eye"></i></a></td>
                                        <td><i class="fa fa-download"></i></td>

                                    </tr>
                                    }
                                    
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </center>
</body>
</html>


